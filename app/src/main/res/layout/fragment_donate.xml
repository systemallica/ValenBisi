<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.systemallica.valenbisi.Fragments.AboutFragment">

    <TextView
        android:text="@string/ad_remove_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textRemove"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.spark.submitbutton.SubmitButton
        android:id="@+id/btn_remove_ads"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/ad_remove"
        android:textColor="@color/gray"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="1500"
        app:sub_btn_line_color="@color/colorPrimary"
        app:sub_btn_ripple_color="@color/colorPrimary"
        app:sub_btn_tick_color="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textRemove"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/donate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDonate"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn_remove_ads"
        android:layout_alignParentStart="true" />

    <com.spark.submitbutton.SubmitButton
        android:id="@+id/btn_buy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/donar"
        android:textColor="@color/gray"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="1500"
        app:sub_btn_line_color="@color/colorPrimary"
        app:sub_btn_ripple_color="@color/colorPrimary"
        app:sub_btn_tick_color="@color/white"
        android:layout_below="@+id/textDonate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/donatorImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/donator"
        android:gravity="center"
        app:srcCompat="@drawable/confirmation"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
