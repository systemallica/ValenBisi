<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.systemallica.valenbisi.Fragments.MainFragment" >


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <Button
        android:id="@+id/btnCarrilToggle"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:background="@drawable/map_style_bg"
        android:textColor="#666666"
        android:drawableStart="@drawable/ic_road_variant_off_black_24dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_alignBaseline="@+id/btnEstacionesToggle"
        android:layout_alignBottom="@+id/btnEstacionesToggle"
        android:layout_marginStart="10dp"
        />

    <Button
        android:id="@+id/btnEstacionesToggle"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:background="@drawable/map_style_bg"
        android:textColor="#666666"
        android:drawableStart="@drawable/ic_place_black_24dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_alignBaseline="@+id/btnOnFootToggle"
        android:layout_alignBottom="@+id/btnOnFootToggle"
        android:layout_toEndOf="@+id/btnCarrilToggle" />

    <Button
        android:id="@+id/btnOnFootToggle"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:background="@drawable/map_style_bg"
        android:textColor="#666666"
        android:drawableStart="@drawable/ic_directions_walk_black_24dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnEstacionesToggle"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnRefresh"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:background="@drawable/map_style_bg"
        android:textColor="#666666"
        android:drawableStart="@drawable/ic_cached_black_24dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_alignBaseline="@+id/btnOnFootToggle"
        android:layout_alignBottom="@+id/btnOnFootToggle"
        android:layout_toEndOf="@+id/btnOnFootToggle" />

</RelativeLayout>